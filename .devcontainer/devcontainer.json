{
  "name": "Fetch IC Dev Environment",
  "image": "ghcr.io/dfinity/icp-dev-env:latest",
  "forwardPorts": [4943],
  "portsAttributes": {
    "4943": {
      "label": "dfx",
      "onAutoForward": "ignore"
    }
  },
  "onCreateCommand": "chmod +x scripts/devcontainer-setup.sh",
  "postCreateCommand": "./scripts/devcontainer-setup.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "GitHub.copilot",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "tamasfe.even-better-toml",
        "dfinity-foundation.vscode-motoko",
        "motoko-lsp-client.motoko-lsp-client"
      ],
      "settings": {
        "chat.promptFiles": true,
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "github.copilot.chat.codeGeneration.instructions": [
          {
            "file": "general.instructions.md"
          },
          {
            "file": "motoko.instructions.md"
          },
          {
            "file": "typescript.instructions.md"
          }
        ],        
        "settingsSync.ignoredExtensions": ["*"],
        "settingsSync.ignoredSettings": [
          "github.copilot.chat.codeGeneration.instructions"          
        ]
      },
      "codespaces": {
        "repositories": {
          "*": {
            "installRecommendedExtensions": false
          }
        }
      }
    }
  },
  "features": {},
  "mounts": []
}